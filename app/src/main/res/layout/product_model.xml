<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pm_fst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/rating_pm"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/rating"
                />
            <TextView
                android:id="@+id/rating_tv_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="19dp"
                android:text="4.7"
                android:textColor="@color/icon_color"
                android:textSize="20sp"

                />
            <ImageView
                android:id="@+id/febroid_border_pm"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/febroidborder"
                />
            <ImageView
                android:id="@+id/febroid_shape_border_pm"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/febroidshape"
                android:visibility="gone"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/febroid_border_pm"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                >

                <ImageView
                    android:id="@+id/thamble_pm"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/febroid_border_pm"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lodingber"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/febroid_border_pm"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/animation"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/name_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Pixed"
                android:textSize="20sp"
                android:textColor="@color/icon_color"
                android:layout_below="@id/cardview_pm"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/price_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$699.00"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_below="@id/name_pm"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>